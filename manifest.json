{
    "manifest_version": 3,
    "name": "Bulletin",
    "description": "A bulletin for you to link text, images and videos across the internet.",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo.png",
        "48": "logo/logo.png",
        "128": "logo/logo.png"
    },
    "options_page": "settings.html",
    "action": {
        "default_title": "Bulletin",
        "default_popup": "popup.html",
        "default_icon": "logo/logo.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+B",
                "mac": "MacCtrl+Shift+B"
            },
            "description": "Opens bulletin board"
        }
    },
    "permissions": [
        "tabs",
        "storage",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    }
}